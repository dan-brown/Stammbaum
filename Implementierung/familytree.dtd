        <!ENTITY % personattributes "
                pid ID #REQUIRED
                forename CDATA #REQUIRED
                surname CDATA #REQUIRED
                sex (M|F) #REQUIRED
                birth_date CDATA #IMPLIED
                death_date CDATA #IMPLIED">

        <!ELEMENT familytree (person, inlaw*)>

        <!ELEMENT person (person*)>
        <!ATTLIST person %personattributes;
                partner IDREF #IMPLIED>

        <!ELEMENT inlaw EMPTY>
        <!ATTLIST inlaw %personattributes;>
